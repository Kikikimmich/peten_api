<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kimmich.peten.mapper.CommentMapper">
    <resultMap id="topicVO" type="com.kimmich.peten.model.vo.CommentVO">
        <id column="id" property="id"/>
        <result column="content" property="content"/>
        <result column="user_id" property="userId"/>
        <result column="topic_id" property="topicId"/>
        <result column="username" property="username"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="getCommentsByTopicID" resultMap="topicVO">
        select tbl_comment.*,tbl_user.username
        from tbl_comment
        join tbl_user on tbl_user.id = tbl_comment.user_id
        where topic_id = #{topicid}
        order by create_time desc
    </select>
</mapper>
